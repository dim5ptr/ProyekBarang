@inherits LayoutComponentBase
@inject NavigationManager Navigation
@inject BarangApp.AuthService.AuthService AuthService


<div class="top-row ps-3 navbar navbar-dark bg-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="dashboard">BarangApp</a>
    </div>
    
</div>

<!-- Toggle untuk Mobile -->
<input type="checkbox" id="nav-toggle" class="navbar-toggler d-none" />
<label for="nav-toggle" class="nav-overlay"></label>

<!-- Navigasi Sidebar -->
<div class="nav-scrollable">
    <nav class="nav flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill"></span> Home
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <a href="#" class="nav-link" @onclick="NavigateWithToken">
                <span class="bi bi-box-seam"></span> Daftar Barang
            </a>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="profile"> 
                <span class="bi bi-person-circle"></span> Profile 
            </NavLink>
        </div>
    </nav>

</div>

@code {
    private async Task NavigateWithToken()
    {
        var token = await AuthService.GetAccessToken();
        Navigation.NavigateTo($"barang-manajement?token={token}");
    }
}